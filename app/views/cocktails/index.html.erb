<h1>Listing cocktails</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cocktails.each do |cocktail| %>
  <tr>
    <td><%= cocktail.name.titleize %></td>
    <td><%= link_to 'Show', cocktail, :class => 'btn' %></td>
    <td><%= link_to 'Delete', cocktail, method: :delete, :class => 'btn', data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

